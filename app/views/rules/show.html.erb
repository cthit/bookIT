<p id="notice"><%= notice %></p>

<h1>Visa regel</h1>

<p>
  <strong>Title:</strong>
  <%= @rule.title %>
</p>

<p>
  <strong>Reason:</strong>
  <%= @rule.reason %>
</p>

<p>
  <strong>Prio:</strong>
  <%= @rule.prio %>
</p>

<p>
  <strong>Rule duration:</strong>
  <%= @rule.start_date.strftime '%F' %> - <%= @rule.stop_date.strftime '%F' %>
</p>

<p>
  <strong>Rooms:</strong>
  <%= @rule.rooms.join ', ' %>
</p>

<p>
  <strong>Time duration:</strong>
  <% if @rule.start_time.nil? %>
    All
  <% else %>
    <%= @rule.start_time.strftime '%R' %> - <%= @rule.stop_time.strftime '%R' %>
  <% end %>
</p>

<p>
  <strong>Allow:</strong>
  <%= @rule.allow %>
</p>

<p>
  <strong>Active on:</strong><br>
  <strong>M T O T F L S</strong>
  <% @rule.days_array.each do |k, d| %>
    <% if d == '1' %>
      <div class="day green"></div>
    <% else %>
      <div class="day red"></div>
    <% end %>
  <% end %>
</p>

<div class="actions">
  <%= link_to 'Edit', edit_rule_path(@rule), class: "btn" %>
  <%= link_to 'Back', rules_path, class: "btn btn-boring" %>
</div>

<div id="mail_form" class="reveal-modal medium">
	<h2>Avslå aktivitetsanmälan</h2>
	<%= form_tag(send_reply_party_report_url('$$'), data: { url: send_reply_party_report_url('$$')}) do %>
		<%= label_tag :email, 'Mottagare:' %>
		<%= text_field_tag :email, '' %>
		<%= label_tag :link, 'Länk till bokningen:' %>
		<%= text_field_tag :link, '', readonly: true %>
		<%= label_tag :reason, 'Anledning:' %>
		<%= text_area_tag :reason %>
		<p></p>
		<%= submit_tag 'Skicka', class: 'close-reveal-modal button' %>
	<% end %>
	<a href="#" class="close-reveal-modal">&times;</a>
</div>
